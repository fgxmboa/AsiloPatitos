@model AsiloPatitos.Domain.Entities.Reserva

@{
    ViewData["Title"] = "Editar Reserva";
}

<section class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-7">

            <div class="card-form">
                <h2 class="text-center form-title mb-4">Editar Reserva</h2>

                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger text-center mb-3">
                        @TempData["ErrorMessage"]
                    </div>
                }

                <form asp-action="Edit">
                    <input type="hidden" asp-for="Id" />

                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="PacienteId" class="form-label-custom"></label>
                        <select asp-for="PacienteId" class="form-control form-input" asp-items="ViewBag.PacienteId"></select>
                        <span asp-validation-for="PacienteId" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="HabitacionId" class="form-label-custom"></label>
                        <select asp-for="HabitacionId" class="form-control form-input" asp-items="ViewBag.HabitacionId"></select>
                        <span asp-validation-for="HabitacionId" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="FechaIngreso" class="form-label-custom"></label>
                        <input asp-for="FechaIngreso" type="date" class="form-control form-input" />
                        <span asp-validation-for="FechaIngreso" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="FechaSalida" class="form-label-custom"></label>
                        <input asp-for="FechaSalida" type="date" class="form-control form-input" />
                        <span asp-validation-for="FechaSalida" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Total" class="form-label-custom"></label>
                        <input asp-for="Total" class="form-control form-input" />
                        <span asp-validation-for="Total" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Estado" class="form-label-custom"></label>
                        <input asp-for="Estado" class="form-control form-input" />
                        <span asp-validation-for="Estado" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" class="btn-cancel">Cancelar</a>
                        <button type="submit" class="btn-form-submit">Guardar cambios</button>
                    </div>

                </form>

            </div>

        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
