@model AsiloPatitos.Domain.Entities.Reserva

@{
    ViewData["Title"] = "Editar Reserva";
}

<h2>Editar Reserva</h2>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="PacienteId" class="form-label"></label>
        <select asp-for="PacienteId" class="form-select" asp-items="ViewBag.PacienteId"></select>
        <span asp-validation-for="PacienteId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="HabitacionId" class="form-label"></label>
        <select asp-for="HabitacionId" class="form-select" asp-items="ViewBag.HabitacionId"></select>
        <span asp-validation-for="HabitacionId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="FechaIngreso" class="form-label"></label>
        <input asp-for="FechaIngreso" class="form-control" type="date" />
        <span asp-validation-for="FechaIngreso" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="FechaSalida" class="form-label"></label>
        <input asp-for="FechaSalida" class="form-control" type="date" />
        <span asp-validation-for="FechaSalida" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Total" class="form-label"></label>
        <input asp-for="Total" class="form-control" />
        <span asp-validation-for="Total" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Estado" class="form-label"></label>
        <input asp-for="Estado" class="form-control" />
        <span asp-validation-for="Estado" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Guardar cambios</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
