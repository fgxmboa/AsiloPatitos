@model AsiloPatitos.Domain.Entities.Reserva

@{
    ViewData["Title"] = "Crear Reserva";
}

<section class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-7">

            <div class="card-form">
                <h2 class="text-center form-title mb-4">Crear Reserva</h2>

                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger text-center mb-3">
                        @TempData["ErrorMessage"]
                    </div>
                }

                <form asp-action="Create">

                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="Paciente" class="form-label-custom"></label>
                        <select asp-for="PacienteId" class="form-control form-input" asp-items="ViewBag.PacienteId"></select>
                        <span asp-validation-for="PacienteId" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Habitacion" class="form-label-custom"></label>
                        <select asp-for="HabitacionId" class="form-control form-input" asp-items="ViewBag.HabitacionId"></select>
                        <span asp-validation-for="HabitacionId" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="FechaIngreso" class="form-label-custom"></label>
                        <input asp-for="FechaIngreso" type="date" class="form-control form-input" />
                        <span asp-validation-for="FechaIngreso" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="FechaSalida" class="form-label-custom"></label>
                        <input asp-for="FechaSalida" type="date" class="form-control form-input" />
                        <span asp-validation-for="FechaSalida" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="TiempoEstancia" class="control-label"></label>
                        <select asp-for="TiempoEstancia" class="form-control">
                            <option value="">Seleccione el tiempo de estancia</option>
                            <option value="Día 8am - 5pm">Día 8am - 5pm</option>
                            <option value="Mañana 8am - 2pm">Mañana 8am - 2pm</option>
                            <option value="Tarde 2pm - 6pm">Tarde 2pm - 6pm</option>
                            <option value="Full estancia">Full estancia</option>
                        </select>
                        <span asp-validation-for="TiempoEstancia" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" class="btn-cancel">Cancelar</a>
                        <button type="submit" class="btn-form-submit">Guardar Reserva</button>
                    </div>

                </form>

            </div>

        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
