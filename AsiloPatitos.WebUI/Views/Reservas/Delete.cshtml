@model AsiloPatitos.Domain.Entities.Reserva

@{
    ViewData["Title"] = "Eliminar Reserva";
}

<h2>Eliminar Reserva</h2>

<h4>¿Está seguro que desea eliminar esta reserva?</h4>

<div>
    <dl class="row">
        <dt class="col-sm-3">Paciente</dt>
        <dd class="col-sm-9">@Model.Paciente?.Nombre</dd>

        <dt class="col-sm-3">Habitación</dt>
        <dd class="col-sm-9">@Model.Habitacion?.Numero</dd>

        <dt class="col-sm-3">Fecha ingreso</dt>
        <dd class="col-sm-9">@Model.FechaIngreso.ToShortDateString()</dd>

        <dt class="col-sm-3">Fecha salida</dt>
        <dd class="col-sm-9">@Model.FechaSalida.ToShortDateString()</dd>

        <dt class="col-sm-3">Total</dt>
        <dd class="col-sm-9">@Model.Total</dd>
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
