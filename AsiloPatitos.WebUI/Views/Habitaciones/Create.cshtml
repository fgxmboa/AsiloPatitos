@model AsiloPatitos.Domain.Entities.Habitacion

@{
    ViewData["Title"] = "Crear Habitación";
}

<section class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="card-form">
                <h2 class="text-center form-title mb-4">Crear Habitación</h2>

                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
                }

                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
                }

                <form asp-action="Create" method="post">
                    @Html.AntiForgeryToken()

                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <!-- Número -->
                    <div class="mb-3">
                        <label asp-for="Numero" class="form-label form-label-custom"></label>
                        <input asp-for="Numero" class="form-control form-input" />
                        <span asp-validation-for="Numero" class="text-danger"></span>
                    </div>

                    <!-- Tipo -->
                    <div class="mb-3">
                        <label asp-for="Tipo" class="form-label form-label-custom"></label>
                        <input asp-for="Tipo" class="form-control form-input" />
                        <span asp-validation-for="Tipo" class="text-danger"></span>
                    </div>

                    <!-- Disponible -->
                    <div class="mb-3 form-check">
                        <input asp-for="Disponible" class="form-check-input" />
                        <label asp-for="Disponible" class="form-check-label form-label-custom"></label>
                    </div>

                    <!-- Precio por día -->
                    <div class="mb-3">
                        <label asp-for="PrecioPorDia" class="form-label form-label-custom"></label>
                        <input asp-for="PrecioPorDia" class="form-control form-input" />
                        <span asp-validation-for="PrecioPorDia" class="text-danger"></span>
                    </div>

                    <!-- Botón Crear -->
                    <div class="d-grid mt-4">
                        <button type="submit" class="btn btn-form-submit">Crear habitación</button>
                    </div>
                </form>

                <!-- Volver -->
                <div class="text-center mt-4">
                    <a asp-action="Index" class="btn-back">← Volver al listado</a>
                </div>

            </div>

        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
