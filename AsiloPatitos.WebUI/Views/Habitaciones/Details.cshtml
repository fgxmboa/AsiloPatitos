@model AsiloPatitos.Domain.Entities.Habitacion

@{
    ViewData["Title"] = "Detalles de Habitación";
}

<h2>Detalles de Habitación</h2>

<div class="card shadow-sm p-3">
    <dl class="row">
        <dt class="col-sm-3">Número</dt>
        <dd class="col-sm-9">@Model.Numero</dd>

        <dt class="col-sm-3">Tipo</dt>
        <dd class="col-sm-9">@Model.Tipo</dd>

        <dt class="col-sm-3">Disponible</dt>
        <dd class="col-sm-9">@(Model.Disponible ? "Sí" : "No")</dd>

        <dt class="col-sm-3">Precio por Día</dt>
        <dd class="col-sm-9">₡@Model.PrecioPorDia</dd>
    </dl>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</div>
