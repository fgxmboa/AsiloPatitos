@model AsiloPatitos.Domain.Entities.Habitacion

@{
    ViewData["Title"] = "Eliminar Habitación";
}

<h2>¿Desea eliminar esta habitación?</h2>

<div class="alert alert-warning">
    <strong>Advertencia:</strong> Esta acción no se puede deshacer.
</div>

<div class="card p-3 shadow-sm">
    <dl class="row">
        <dt class="col-sm-3">Número</dt>
        <dd class="col-sm-9">@Model.Numero</dd>

        <dt class="col-sm-3">Tipo</dt>
        <dd class="col-sm-9">@Model.Tipo</dd>

        <dt class="col-sm-3">Precio por Día</dt>
        <dd class="col-sm-9">₡@Model.PrecioPorDia</dd>
    </dl>
</div>

<form asp-action="Delete" method="post" class="mt-3">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
