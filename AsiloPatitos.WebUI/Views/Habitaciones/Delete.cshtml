@model AsiloPatitos.Domain.Entities.Habitacion

@{
    ViewData["Title"] = "Eliminar Habitación";
}

<section class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="card-form">
                <h2 class="text-center form-title mb-4">Eliminar Habitación</h2>

                <div class="alert alert-warning text-center fw-bold">
                    ¿Está seguro que desea eliminar esta habitación?<br />
                    <span class="fw-normal">Esta acción no se puede deshacer.</span>
                </div>

                <div class="card-review mb-4">
                    <dl class="row mb-0 w-100">
                        <dt class="col-sm-4">Número</dt>
                        <dd class="col-sm-8">@Model.Numero</dd>

                        <dt class="col-sm-4">Tipo</dt>
                        <dd class="col-sm-8">@Model.Tipo</dd>

                        <dt class="col-sm-4">Precio por Día</dt>
                        <dd class="col-sm-8">₡@Model.PrecioPorDia</dd>
                    </dl>
                </div>

                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="Id" />

                    <div class="d-grid">
                        <button type="submit" class="btn btn-form-submit" style="background:#9b2c2c; box-shadow:none;">
                            Eliminar habitación
                        </button>
                    </div>
                </form>

                <div class="text-center mt-4">
                    <a asp-action="Index" class="btn-back">← Cancelar y volver</a>
                </div>

            </div>

        </div>
    </div>
</section>
