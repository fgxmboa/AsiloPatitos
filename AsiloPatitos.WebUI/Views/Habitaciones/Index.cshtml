@model IEnumerable<AsiloPatitos.Domain.Entities.Habitacion>

@{
    ViewData["Title"] = "Habitaciones";
}

<section class="container py-5">

    @* Mensajes *@
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }

    <div class="row justify-content-center">
        <div class="col-md-10">

            <div class="card-page">

                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h2 class="page-title">Listado de Habitaciones</h2>

                    <a asp-action="Create" class="btn-create">
                        + Nueva habitación
                    </a>
                </div>

                <div class="table-responsive">
                    <table class="table table-custom align-middle">
                        <thead>
                            <tr>
                                <th>Número</th>
                                <th>Tipo</th>
                                <th>Disponible</th>
                                <th>Precio por día</th>
                                <th>Paciente asignado</th>
                                <th class="text-end">Acciones</th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Numero</td>
                                    <td>@item.Tipo</td>
                                    <td>@(item.Disponible ? "Sí" : "No")</td>
                                    <td>₡@item.PrecioPorDia</td>
                                    <td>@(item.Paciente != null ? item.Paciente.Cedula : "—")</td>

                                    <td class="text-end">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn-action edit">Editar</a>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn-action details">Detalles</a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn-action delete">Eliminar</a>
                                    </td>
                                </tr>
                            }
                        </tbody>

                    </table>
                </div>

            </div>

        </div>
    </div>

</section>
