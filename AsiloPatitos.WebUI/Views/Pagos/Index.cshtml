@model IEnumerable<AsiloPatitos.Domain.Entities.Pago>

@{
    ViewData["Title"] = "Pagos";
}

<h2>Pagos</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<a asp-action="Create" class="btn btn-primary mb-3">Registrar Pago</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Reserva</th>
            <th>Fecha Pago</th>
            <th>Monto</th>
            <th>Método</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ReservaId</td>
                <td>@item.FechaPago.ToShortDateString()</td>
                <td>@item.Monto</td>
                <td>@item.Metodo</td>
                <td>@item.Estado</td>

                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Ver</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
