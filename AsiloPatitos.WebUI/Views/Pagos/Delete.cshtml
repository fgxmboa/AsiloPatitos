@model AsiloPatitos.Domain.Entities.Pago

@{
    ViewData["Title"] = "Eliminar Pago";
}

<h2>Eliminar Pago</h2>

<div class="alert alert-danger">
    ¿Está seguro que desea eliminar este pago?
</div>

<div class="card">
    <div class="card-body">

        <p><strong>ID Reserva:</strong> @Model.ReservaId</p>
        <p><strong>Fecha de Pago:</strong> @Model.FechaPago.ToShortDateString()</p>
        <p><strong>Monto:</strong> @Model.Monto</p>
        <p><strong>Método:</strong> @Model.Metodo</p>
        <p><strong>Estado:</strong> @Model.Estado</p>

    </div>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger mt-3">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Cancelar</a>
</form>
