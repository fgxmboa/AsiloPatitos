@model AsiloPatitos.Domain.Entities.Pago

@{
    ViewData["Title"] = "Detalles del Pago";
}

<h2>Detalles del Pago</h2>

<div class="card">
    <div class="card-body">

        <p><strong>ID Reserva:</strong> @Model.ReservaId</p>
        <p><strong>Fecha de Pago:</strong> @Model.FechaPago.ToShortDateString()</p>
        <p><strong>Monto:</strong> @Model.Monto</p>
        <p><strong>Método:</strong> @Model.Metodo</p>
        <p><strong>Estado:</strong> @Model.Estado</p>

    </div>
</div>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning mt-3">Editar</a>
<a asp-action="Index" class="btn btn-secondary mt-3">Volver</a>
