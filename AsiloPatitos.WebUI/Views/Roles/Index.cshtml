@model IEnumerable<AsiloPatitos.Domain.Entities.Rol>

@{
    ViewData["Title"] = "Index";
}

<h2 class="mt-3">Roles Registrados</h2>

<a class="btn btn-primary mb-3" asp-action="Create">Nuevo Rol</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var rol in Model)
        {
            <tr>
                <td>@rol.Nombre</td>
                <td>@rol.Descripcion</td>
                <td>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@rol.Id">Editar</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@rol.Id">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
