@model AsiloPatitos.Domain.Entities.Medicamento
@{
    ViewData["Title"] = "Detalles del Medicamento";
}

<h2>Detalles del Medicamento</h2>

<div class="card p-3">
    <dl class="row">
        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">@Model.Nombre</dd>

        <dt class="col-sm-2">Dosis</dt>
        <dd class="col-sm-10">@Model.Dosis</dd>

        <dt class="col-sm-2">Frecuencia</dt>
        <dd class="col-sm-10">@Model.Frecuencia</dd>

        <dt class="col-sm-2">Stock</dt>
        <dd class="col-sm-10">@Model.Stock</dd>
    </dl>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</div>
