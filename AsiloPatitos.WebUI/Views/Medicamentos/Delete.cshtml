@model AsiloPatitos.Domain.Entities.Medicamento
@{
    ViewData["Title"] = "Eliminar Medicamento";
}

<h2>Eliminar Medicamento</h2>

<h4>¿Está seguro que desea eliminar este medicamento?</h4>

<div class="card p-3">
    <dl class="row">
        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">@Model.Nombre</dd>

        <dt class="col-sm-2">Dosis</dt>
        <dd class="col-sm-10">@Model.Dosis</dd>

        <dt class="col-sm-2">Frecuencia</dt>
        <dd class="col-sm-10">@Model.Frecuencia</dd>

        <dt class="col-sm-2">Stock</dt>
        <dd class="col-sm-10">@Model.Stock</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
