@model AsiloPatitos.Domain.Entities.Medicamento
@{
    ViewData["Title"] = "Crear Medicamento";
}

<h2>Crear Medicamento</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<form asp-action="Create" method="post">
    <div class="form-group mb-3">
        <label asp-for="Nombre" class="form-label"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Dosis" class="form-label"></label>
        <input asp-for="Dosis" class="form-control" />
        <span asp-validation-for="Dosis" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Frecuencia" class="form-label"></label>
        <input asp-for="Frecuencia" class="form-control" />
        <span asp-validation-for="Frecuencia" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Stock" class="form-label"></label>
        <input asp-for="Stock" type="number" class="form-control" />
        <span asp-validation-for="Stock" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
