@model AsiloPatitos.Domain.Entities.Paciente

@{
    ViewData["Title"] = "Eliminar Paciente";
}

<section class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-7">

            <div class="card-form">
                <h2 class="form-title mb-4 text-center">Eliminar Paciente</h2>

                <p class="text-danger fw-bold mb-4 text-center">
                    ¿Está seguro que desea eliminar este paciente?
                </p>

                <dl class="row mb-4">
                    <dt class="col-sm-4 fw-bold">Nombre</dt>
                    <dd class="col-sm-8">@Model.Nombre</dd>

                    <dt class="col-sm-4 fw-bold">Cédula</dt>
                    <dd class="col-sm-8">@Model.Cedula</dd>

                    <dt class="col-sm-4 fw-bold">Nivel de Asistencia</dt>
                    <dd class="col-sm-8">@Model.NivelAsistencia</dd>
                </dl>

                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="Id" />

                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn-cancel">Cancelar</a>
                        <button type="submit" class="btn-form-submit" style="background:#C0392B !important;">
                            Eliminar
                        </button>
                    </div>

                </form>

            </div>

        </div>
    </div>
</section>
