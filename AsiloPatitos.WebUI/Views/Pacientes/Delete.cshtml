@model AsiloPatitos.Domain.Entities.Paciente
@{
    ViewData["Title"] = "Eliminar Paciente";
}

<h2>Eliminar Paciente</h2>

<h4>¿Está seguro que desea eliminar este paciente?</h4>

<div class="card p-3">
    <dl class="row">
        <dt class="col-sm-3">Nombre</dt>
        <dd class="col-sm-9">@Model.Nombre</dd>

        <dt class="col-sm-3">Cédula</dt>
        <dd class="col-sm-9">@Model.Cedula</dd>

        <dt class="col-sm-3">Nivel de Asistencia</dt>
        <dd class="col-sm-9">@Model.NivelAsistencia</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
