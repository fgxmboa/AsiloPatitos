@model AsiloPatitos.Domain.Entities.Paciente

@{
    ViewData["Title"] = "Detalles del Paciente";
}

<section class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-7">

            <div class="card-form">

                <h2 class="form-title mb-4 text-center">Detalles del Paciente</h2>

                <dl class="row mb-4">

                    <dt class="col-sm-4 fw-bold">Nombre</dt>
                    <dd class="col-sm-8">@Model.Nombre</dd>

                    <dt class="col-sm-4 fw-bold">Cédula</dt>
                    <dd class="col-sm-8">@Model.Cedula</dd>

                    <dt class="col-sm-4 fw-bold">Fecha de Ingreso</dt>
                    <dd class="col-sm-8">@Model.FechaIngreso.ToShortDateString()</dd>

                    <dt class="col-sm-4 fw-bold">Nivel de Asistencia</dt>
                    <dd class="col-sm-8">@Model.NivelAsistencia</dd>

                    <dt class="col-sm-4 fw-bold">Cuidados Especiales</dt>
                    <dd class="col-sm-8">@Model.CuidadosEspeciales</dd>

                    <dt class="col-sm-4 fw-bold">Paquete Adicional</dt>
                    <dd class="col-sm-8">@Model.PaqueteAdicional</dd>

                    <dt class="col-sm-4 fw-bold">Habitación</dt>
                    <dd class="col-sm-8">@((Model.Habitacion != null) ? Model.Habitacion.Numero : "Sin asignar")</dd>

                </dl>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn-back">Volver</a>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn-form-submit">Editar</a>
                </div>

            </div>

        </div>
    </div>
</section>
