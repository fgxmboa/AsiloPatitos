@model AsiloPatitos.Domain.Entities.Paciente
@{
    ViewData["Title"] = "Detalles del Paciente";
}

<h2>Detalles del Paciente</h2>

<div class="card p-3">
    <dl class="row">
        <dt class="col-sm-3">Nombre</dt>
        <dd class="col-sm-9">@Model.Nombre</dd>

        <dt class="col-sm-3">Cédula</dt>
        <dd class="col-sm-9">@Model.Cedula</dd>

        <dt class="col-sm-3">Fecha de Ingreso</dt>
        <dd class="col-sm-9">@Model.FechaIngreso.ToShortDateString()</dd>

        <dt class="col-sm-3">Nivel de Asistencia</dt>
        <dd class="col-sm-9">@Model.NivelAsistencia</dd>

        <dt class="col-sm-3">Cuidados Especiales</dt>
        <dd class="col-sm-9">@Model.CuidadosEspeciales</dd>

        <dt class="col-sm-3">Paquete Adicional</dt>
        <dd class="col-sm-9">@Model.PaqueteAdicional</dd>

        <dt class="col-sm-3">Habitación</dt>
        <dd class="col-sm-9">@((Model.Habitacion != null) ? Model.Habitacion.Numero : "Sin asignar")</dd>
    </dl>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</div>
