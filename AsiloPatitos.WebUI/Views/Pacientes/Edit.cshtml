@model AsiloPatitos.Domain.Entities.Paciente

@{
    ViewData["Title"] = "Editar Paciente";
}

<section class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-7">

            <div class="card-form">
                <h2 class="text-center form-title mb-4">Editar Paciente</h2>

                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger text-center mb-3">
                        @TempData["ErrorMessage"]
                    </div>
                }

                <form asp-action="Edit">
                    <input type="hidden" asp-for="Id" />

                    <div class="mb-3">
                        <label asp-for="Nombre" class="form-label form-label-custom"></label>
                        <input asp-for="Nombre" class="form-control form-input" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Cedula" class="form-label form-label-custom"></label>
                        <input asp-for="Cedula" class="form-control form-input" />
                        <span asp-validation-for="Cedula" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="FechaIngreso" class="form-label form-label-custom"></label>
                        <input asp-for="FechaIngreso" type="date" class="form-control form-input" />
                        <span asp-validation-for="FechaIngreso" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label class="fw-bold">NivelAsistencia</label>
                        <select asp-for="NivelAsistencia" class="form-control">
                            <option value="">Seleccione una opción</option>
                            <option>Asistencia básica</option>
                            <option>Asistencia para movilidad</option>
                            <option>Asistencia para alimentación</option>
                            <option>Asistencia para baño</option>
                            <option>Asistencia completa</option>
                        </select>
                        <span asp-validation-for="NivelAsistencia" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label class="fw-bold">CuidadosEspeciales</label>
                        <select asp-for="CuidadosEspeciales" class="form-control">
                            <option value="">Seleccione una opción</option>
                            <option>Alergias</option>
                            <option>Cambios de vendajes</option>
                            <option>Dietas especiales</option>
                        </select>
                        <span asp-validation-for="CuidadosEspeciales" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label class="fw-bold">PaqueteAdicional</label>
                        <select asp-for="PaqueteAdicional" class="form-control">
                            <option value="">Seleccione una opción</option>
                            <option>Disfrute de juegos</option>
                            <option>Visitas a los familiares</option>
                            <option>Paseos a sitios con acompañamiento</option>
                        </select>
                        <span asp-validation-for="PaqueteAdicional" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Habitacion" class="form-label form-label-custom"></label>
                        <select asp-for="HabitacionId" class="form-control form-input" asp-items="ViewBag.HabitacionId">
                            <option value="">Seleccione una habitación</option>
                        </select>
                        <span asp-validation-for="HabitacionId" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" class="btn-cancel">Cancelar</a>
                        <button type="submit" class="btn-form-submit">Guardar cambios</button>
                    </div>

                </form>

            </div>

        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
