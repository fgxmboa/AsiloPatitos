@model AsiloPatitos.Domain.Entities.Paciente
@{
    ViewData["Title"] = "Editar Paciente";
}

<h2>Editar Paciente</h2>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Nombre" class="form-label"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Cedula" class="form-label"></label>
        <input asp-for="Cedula" class="form-control" />
        <span asp-validation-for="Cedula" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="FechaIngreso" class="form-label"></label>
        <input asp-for="FechaIngreso" type="date" class="form-control" />
        <span asp-validation-for="FechaIngreso" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="NivelAsistencia" class="form-label"></label>
        <input asp-for="NivelAsistencia" class="form-control" />
        <span asp-validation-for="NivelAsistencia" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="CuidadosEspeciales" class="form-label"></label>
        <textarea asp-for="CuidadosEspeciales" class="form-control"></textarea>
        <span asp-validation-for="CuidadosEspeciales" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="PaqueteAdicional" class="form-label"></label>
        <input asp-for="PaqueteAdicional" class="form-control" />
        <span asp-validation-for="PaqueteAdicional" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="HabitacionId" class="form-label"></label>
        <select asp-for="HabitacionId" class="form-control" asp-items="ViewBag.HabitacionId">
            <option value="">Seleccione una habitación</option>
        </select>
        <span asp-validation-for="HabitacionId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Guardar Cambios</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
