@model AsiloPatitos.Domain.Entities.Tratamiento

<h2>Eliminar Tratamiento</h2>

<div class="alert alert-warning">
    ¿Está seguro que desea eliminar este tratamiento?
</div>

<table class="table">
    <tr><th>Nombre</th><td>@Model.Nombre</td></tr>
    <tr><th>Descripción</th><td>@Model.Descripcion</td></tr>
    <tr><th>Costo</th><td>@Model.Costo</td></tr>
</table>

<form asp-action="Delete">
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
