@model IEnumerable<AsiloPatitos.Domain.Entities.Empleado>

@{
    ViewData["Title"] = "Empleados";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="container py-5">

    <div class="row justify-content-center">
        <div class="col-md-10">

            <div class="card-page">

                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h2 class="page-title">Listado de Empleados</h2>

                    <a asp-action="Create" class="btn btn-create">
                        + Agregar empleado
                    </a>
                </div>

                <div class="table-responsive">
                    <table class="table table-custom align-middle">
                        <thead>
                            <tr>
                                <th>Nombre</th>
                                <th>Cédula</th>
                                <th>Fecha de ingreso</th>
                                <th>Departamento</th>
                                <th>Perfil</th>
                                <th class="text-end">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Nombre</td>
                                    <td>@item.Cedula</td>
                                    <td>@item.FechaIngreso.ToShortDateString()</td>
                                    <td>@item.Departamento</td>
                                    <td>@item.Perfil</td>

                                    <td class="text-end">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn-action edit">Editar</a>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn-action details">Detalles</a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn-action delete">Eliminar</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

            </div>

        </div>
    </div>

</section>
