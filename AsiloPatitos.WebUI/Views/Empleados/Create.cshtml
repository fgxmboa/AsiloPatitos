@model AsiloPatitos.Domain.Entities.Empleado

@{
    ViewData["Title"] = "Crear Empleado";
}

<section class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="card-form">
                <h2 class="text-center form-title mb-4">@ViewData["Title"]</h2>

                <form asp-action="Create" method="post">
                    @Html.AntiForgeryToken()

                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="Nombre" class="form-label form-label-custom"></label>
                        <input asp-for="Nombre" class="form-control form-input" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Cedula" class="form-label form-label-custom"></label>
                        <input asp-for="Cedula" class="form-control form-input" />
                        <span asp-validation-for="Cedula" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="FechaIngreso" class="form-label form-label-custom"></label>
                        <input asp-for="FechaIngreso" class="form-control form-input" type="date" />
                        <span asp-validation-for="FechaIngreso" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label for="Departamento" class="control-label">Departamento</label>
                        <select asp-for="Departamento" class="form-control">
                            <option value="">Seleccione un departamento</option>
                            <option>Administración</option>
                            <option>Gerencia</option>
                            <option>DTI</option>
                            <option>Financiero</option>
                        </select>
                        <span asp-validation-for="Departamento" class="text-danger"></span>
                    </div>


                    <div class="form-group mb-3">
                        <label for="Perfil" class="control-label">Perfil</label>
                        <select asp-for="Perfil" class="form-control">
                            <option value="">Seleccione un perfil</option>
                            <option>Gerencia</option>
                            <option>Gestión de Pacientes</option>
                            <option>Mantenimiento</option>
                            <option>Recepción</option>
                        </select>
                        <span asp-validation-for="Perfil" class="text-danger"></span>
                    </div>


                    <div class="d-grid mt-4">
                        <button type="submit" class="btn btn-form-submit">Crear empleado</button>
                    </div>
                </form>

                <div class="text-center mt-4">
                    <a asp-action="Index" class="btn-back">← Volver a la lista de empleados</a>
                </div>
            </div>

        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
