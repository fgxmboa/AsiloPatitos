@model AsiloPatitos.Domain.Entities.Empleado

@{
    ViewData["Title"] = "Eliminar Empleado";
}

<section class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-7">

            <div class="card-form">
                <h2 class="form-title mb-4">Eliminar Empleado</h2>

                <p class="text-danger fw-bold mb-4">
                    ¿Está seguro de que desea eliminar este empleado?
                </p>

                <dl class="row mb-4">
                    <dt class="col-sm-4 fw-bold">Nombre</dt>
                    <dd class="col-sm-8">@Model.Nombre</dd>

                    <dt class="col-sm-4 fw-bold">Cédula</dt>
                    <dd class="col-sm-8">@Model.Cedula</dd>

                    <dt class="col-sm-4 fw-bold">Fecha Ingreso</dt>
                    <dd class="col-sm-8">@Model.FechaIngreso.ToShortDateString()</dd>

                    <dt class="col-sm-4 fw-bold">Departamento</dt>
                    <dd class="col-sm-8">@Model.Departamento</dd>

                    <dt class="col-sm-4 fw-bold">Perfil</dt>
                    <dd class="col-sm-8">@Model.Perfil</dd>
                </dl>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />

                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn-cancel">Cancelar</a>
                        <button type="submit" class="btn-form-submit" style="background:#C0392B !important;">
                            Eliminar
                        </button>
                    </div>

                </form>
            </div>

        </div>
    </div>
</section>
