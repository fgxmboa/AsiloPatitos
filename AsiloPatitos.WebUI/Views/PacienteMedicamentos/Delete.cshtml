@model AsiloPatitos.Domain.Entities.PacienteMedicamento
@{
    ViewData["Title"] = "Eliminar Asignación";
}

<h2>Eliminar Asignación</h2>

<p>¿Está seguro de eliminar la relación entre el paciente y el medicamento?</p>

<div class="card p-3">
    <dl class="row">
        <dt class="col-sm-3">Paciente</dt>
        <dd class="col-sm-9">@Model.Paciente.Nombre</dd>

        <dt class="col-sm-3">Medicamento</dt>
        <dd class="col-sm-9">@Model.Medicamento.Nombre</dd>

        <dt class="col-sm-3">Periodo</dt>
        <dd class="col-sm-9">@Model.FechaInicio.ToShortDateString() - @Model.FechaFin.ToShortDateString()</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
