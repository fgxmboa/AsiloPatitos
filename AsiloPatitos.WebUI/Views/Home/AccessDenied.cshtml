@{
    ViewData["Title"] = "Acceso Denegado";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="py-5" style="min-height:70vh; display:flex; align-items:center;">
    <div class="container text-center">

        <div class="mb-4">
            <img src="/img/logo2.png" alt="Logo" style="width:120px; opacity:0.85;" />
        </div>

        <h1 class="fw-bold" style="font-size:2.3rem;">Acceso denegado</h1>
        <p class="mt-3 text-muted" style="font-size:1.1rem;">
            No tienes permisos para acceder a esta sección del sistema.
        </p>

        <div class="mt-4">
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary px-4 py-2" style="font-size:1rem;">
                Volver al inicio
            </a>
        </div>

        <div class="mt-3">
            <small class="text-secondary">
                Si crees que esto es un error, contacta al administrador del sistema.
            </small>
        </div>

    </div>
</section>
