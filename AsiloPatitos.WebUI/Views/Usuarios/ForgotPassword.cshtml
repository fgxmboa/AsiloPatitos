@{
    ViewData["Title"] = "Recuperar contraseña";
}

<section class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="card-form">
                <h2 class="text-center form-title mb-4">Recuperar contraseña</h2>

                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger text-center mb-3">
                        @TempData["ErrorMessage"]
                    </div>
                }

                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success text-center mb-3">
                        @TempData["SuccessMessage"]
                    </div>
                    <div class="alert alert-info text-center mb-3">
                        Enlace de recuperación:<br />
                        <a href="@TempData["ResetLink"]">@TempData["ResetLink"]</a>
                    </div>
                }

                <form method="post">
                    <div class="mb-3">
                        <label class="form-label-custom">Correo registrado</label>
                        <input class="form-control form-input" type="email" name="correo" required />
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" class="btn-cancel">Cancelar</a>
                        <button type="submit" class="btn-form-submit">Enviar enlace</button>
                    </div>
                </form>

            </div>

        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
