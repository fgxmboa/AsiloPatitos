@{
    ViewData["Title"] = "Recuperar contraseña";
}

<section class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <h2 class="mb-4 text-center">Recuperar contraseña</h2>

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
            }

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">@TempData["SuccessMessage"]</div>
                <div class="alert alert-info">
                    Enlace de recuperación:<br />
                    <a href="@TempData["ResetLink"]">@TempData["ResetLink"]</a>
                </div>
            }

            <form method="post">
                <div class="mb-3">
                    <label class="form-label">Correo registrado</label>
                    <input class="form-control" type="email" name="correo" required />
                </div>

                <button class="btn btn-primary w-100">Enviar enlace</button>
            </form>

        </div>
    </div>
</section>
