@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Patitos del Retiro</title>

    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Carga correcta del CSS con versionado -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    @RenderSection("Styles", required: false)
</head>
<body>

    <header>
        <nav class="navbar navbar-expand-lg navbar-light site-navbar">
            <div class="container">

                <a class="navbar-brand d-flex align-items-center gap-2" href="/">
                    <img src="/img/logo1.png" alt="Logo" class="brand-logo" />
                    <span class="brand-title">Patitos del Retiro</span>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav"
                        aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNav">
                    <ul class="navbar-nav ms-auto align-items-lg-center">

                        <li class="nav-item"><a class="nav-link" href="/Empleados">Empleados</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Pacientes">Pacientes</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Reservas">Reservaciones</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Habitaciones">Habitaciones</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Reportes">Reportes</a></li>

                        @{
                            var usuarioId = HttpContextAccessor.HttpContext.Session.GetInt32("UsuarioId");
                            var nombre = HttpContextAccessor.HttpContext.Session.GetString("NombreUsuario");
                            var rol = HttpContextAccessor.HttpContext.Session.GetString("Rol");
                        }

                        @if (usuarioId == null)
                        {
                            <!-- Usuario NO está logueado -->
                            <li class="nav-item">
                                <a class="nav-link" href="/Usuarios/Login">Iniciar sesión</a>
                            </li>
                        }
                        else
                        {
                            <!-- Usuario SÍ está logueado -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="perfilMenu" role="button" data-bs-toggle="dropdown">
                                    Bienvenido/a @nombre
                                </a>
                                <ul class="dropdown-menu">
                                    <li><span class="dropdown-item-text">Rol: @rol</span></li>
                                    <li><hr class="dropdown-divider" /></li>
                                    <li><a class="dropdown-item" href="/Usuarios/Logout">Cerrar sesión</a></li>
                                </ul>
                            </li>
                        }


                    </ul>
                </div>





            </div>
        </nav>
    </header>

    <main>
        @RenderBody()
    </main>

    <footer class="footer mt-5">
        <div class="container py-5">

            <div class="row text-center text-md-start">

                <!-- COLUMNA 1 -->
                <div class="col-md-4 mb-4">
                    <h5 class="fw-bold footer-title">Patitos del Retiro</h5>
                    <p class="footer-text">
                        Un hogar dedicado al bienestar, cariño y atención profesional para nuestros adultos mayores.
                    </p>
                </div>

                <!-- COLUMNA 2: MENÚ -->
                <div class="col-md-4 mb-4">
                    <h6 class="fw-bold footer-subtitle">Menú</h6>
                    <ul class="list-unstyled footer-links mt-2">
                        <li><a href="/Home/Index" class="footer-link">Inicio</a></li>
                        <li><a href="/Home/Nosotros" class="footer-link">Quiénes somos</a></li>
                        <li><a href="/#servicios" class="footer-link">Servicios</a></li>
                        <li><a href="/#habitaciones" class="footer-link">Habitaciones</a></li>
                        <li><a href="/Reservas/Create" class="footer-link">Reservar</a></li>
                    </ul>
                </div>

                <!-- COLUMNA 3: CONTACTO -->
                <div class="col-md-4 mb-4">
                    <h6 class="fw-bold footer-subtitle">Contacto</h6>

                    <ul class="list-unstyled footer-text mt-2">
                        <li><strong>Dirección:</strong> San José, Costa Rica</li>
                        <li><strong>Tel:</strong> +506 2255-0000</li>
                        <li><strong>Correo:</strong> info@patitosdelretiro.com</li>
                    </ul>

                    <!-- REDES SOCIALES -->
                    <div class="footer-social mt-3">
                        <a href="#" class="social-icon">
                            <img src="/img/facebook.png" alt="Facebook"/></a>
                        <a href="#" class="social-icon">
                            <img src="/img/instagram.png" alt="Instagram"/></a>
                        <a href="#" class="social-icon">
                            <img src="/img/whatsapp.png" alt="WhatsApp"/></a>
                    </div>
                </div>

            </div>

            <hr class="footer-divider" />

            <div class="text-center small footer-copy mt-3">
                © @DateTime.Now.Year Patitos del Retiro — Todos los derechos reservados
            </div>

        </div>
    </footer>




    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)

</body>
</html>
