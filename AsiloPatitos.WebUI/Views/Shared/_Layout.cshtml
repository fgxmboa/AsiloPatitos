<!-- Views/Shared/_Layout.cshtml -->
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Patitos del Retiro</title>

    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <link rel="stylesheet" href="~/css/site.css" />
    @RenderSection("Styles", required: false)
</head>
<body>

    <header>
        <!-- IMPORTANTE: navbar-light restaurado para que funcione bien el navbar -->
        <nav class="navbar navbar-expand-lg navbar-light site-navbar">
            <div class="container">

                <a class="navbar-brand d-flex align-items-center gap-2" href="/">
                    <img src="/img/logo.png" alt="Logo" class="brand-logo" />
                    <span class="brand-title">Patitos del Retiro</span>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav"
                        aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNav">
                    <ul class="navbar-nav ms-auto align-items-lg-center">

                        <li class="nav-item"><a class="nav-link" href="/Empleados">Empleados</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Pacientes">Pacientes</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Reservaciones">Reservaciones</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Habitaciones">Habitaciones</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Reporteria">Reportería</a></li>

                        <li class="nav-item ms-3">
                            <a class="btn btn-nav-login" href="/Account/Login">Iniciar sesión</a>
                        </li>

                    </ul>
                </div>

            </div>
        </nav>
    </header>

    <main>
        @RenderBody()
    </main>

    <footer class="site-footer">
        <div class="container text-center py-4">
            <p class="mb-1">© @DateTime.Now.Year Patitos del Retiro — Todos los derechos reservados</p>
            <small>Dirección · Teléfono · Correo</small>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)

</body>
</html>
