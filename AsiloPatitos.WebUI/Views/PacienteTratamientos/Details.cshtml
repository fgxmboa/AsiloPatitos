@model AsiloPatitos.Domain.Entities.PacienteTratamiento

<h2>Detalles del Tratamiento</h2>

<div class="card bg-dark text-light p-4">

    <dl class="row">
        <dt class="col-sm-3">Paciente</dt>
        <dd class="col-sm-9">@Model.Paciente.Nombre</dd>

        <dt class="col-sm-3">Tratamiento</dt>
        <dd class="col-sm-9">@Model.Tratamiento.Nombre</dd>

        <dt class="col-sm-3">Fecha Aplicación</dt>
        <dd class="col-sm-9">@Model.FechaAplicacion.ToShortDateString()</dd>

        <dt class="col-sm-3">Observaciones</dt>
        <dd class="col-sm-9">@Model.Observaciones</dd>
    </dl>

    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</div>
