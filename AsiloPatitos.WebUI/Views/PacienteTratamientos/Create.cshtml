@model AsiloPatitos.Domain.Entities.PacienteTratamiento

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}


<h2>Registrar Tratamiento</h2>

<div class="text-danger">@TempData["ErrorMessage"]</div>
<div class="text-success">@TempData["SuccessMessage"]</div>

<form asp-action="Create" method="post">

    <div class="mb-3">
        <label asp-for="PacienteId"></label>
        <select asp-for="PacienteId" asp-items="ViewBag.PacienteId" class="form-control"></select>
        <span asp-validation-for="PacienteId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="TratamientoId"></label>
        <select asp-for="TratamientoId" asp-items="ViewBag.TratamientoId" class="form-control"></select>
        <span asp-validation-for="TratamientoId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="FechaAplicacion"></label>
        <input asp-for="FechaAplicacion" class="form-control" />
        <span asp-validation-for="FechaAplicacion" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Observaciones"></label>
        <textarea asp-for="Observaciones" class="form-control"></textarea>
        <span asp-validation-for="Observaciones" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
